{% extends "base.jinja2" %}


<div class="container"><h1> Yolo store jinja </h1>
</div>
{% block nav %}

{% endblock %}
{% block content %}

    {% if session['email'] == config.ADMIN %}
        <div class="container">
            <h4>Welcome Admin -> {{ session['email'] }}</h4>
        </div>
    {% endif %}
    {% for store in stores %}
        <div class="container">
            <br>
            <div class="list-group">

                <div class="list-group-item">
                    <h4>Store name : {{ store.name }}</h4>
                </div>

                <div class="list-group-item">
                    <p>URL prefix : {{ store.url_prefix }}</p>
                </div>

                <div class="list-group-item">
                    <p>Tag name : {{ store.tag_name }}</p>
                </div>

                <div class="list-group-item">
                    <p>Query name : {{ store.query }}</p>
                </div>
            </div>
            <br>
        </div>

    {% endfor %}
    {% if session['email'] == config.ADMIN %}
        <div class="container">
            <a class="btn btn-primary" href="{{ url_for('bstore.create') }}">Add new store</a>
        </div>
    {% endif %}
{% endblock %}
